  <body>
    <%- include('partials/header') %>
      <div class="container">
        <div class="home-container">
          <h1>Are You Ready?</h1>
          <p class="tagline">Challenge yourself with our knowledge quiz!</p>
        </div>

          <div class="action-buttons">
            <% if (user) { %>
            <!-- If user is logged in, show the Play button -->
            <a href="/quiz" class="btn play-btn">
              <i class="fas fa-play-circle"></i> Start Quiz
            </a>
            <a href="/leaderboard" class="btn secondary-btn">
              <i class="fas fa-trophy"></i> Leaderboard
            </a>
            <% } else { %>
            <!-- If user is not logged in, show Sign In and Register buttons -->
            <a href="/auth/login" class="btn login-btn">
              <i class="fas fa-sign-in-alt"></i> Sign In
            </a>
            <a href="/leaderboard" class="btn secondary-btn">
              <i class="fas fa-trophy"></i> Leaderboard
            </a>
            <% } %>
          </div>

